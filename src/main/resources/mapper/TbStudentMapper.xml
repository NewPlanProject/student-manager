<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TbStudentMapper">
    
    <sql id="tbStudentColumns">tb_student.id AS tb_student_id, tb_student.name AS tb_student_name</sql>
    
    <sql id="tbStudentWhere">
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="id!=0">AND tb_student.id = #{id}</if>
            <if test="name!=null">AND tb_student.name = #{name}</if>
        </trim>
    </sql>

    <sql id="order">
        <if test="orderString!=null and sequence!=null">ORDER BY ${orderString} ${sequence}</if>
    </sql>

    <sql id="tbStudentOrder">
        <if test="orderString!=null">ORDER BY ${orderString}</if>
    </sql>
    
    <sql id="tbStudentLimit">LIMIT #{startLine},#{limitLine}</sql>
    
    <resultMap type="org.heran.edu.student.domain.TbStudent" id="tbStudentResultMap">
        <id column="tb_student_id" property="id" />
        <result column="tb_student_name" property="name" />
    </resultMap>
    
    <select id="findDao" resultMap="tbStudentResultMap">
        SELECT
        <include refid="tbStudentColumns" />
        FROM tb_student
        <include refid="tbStudentWhere" />
        <include refid="tbStudentOrder" />
    </select>
    
    <select id="countDao" resultType="int">
        SELECT COUNT(*) FROM tb_student
        <include refid="tbStudentWhere" />
    </select>
    
    <select id="pageDao" resultMap="tbStudentResultMap">
        SELECT
        <include refid="tbStudentColumns" />
        FROM tb_student
        <include refid="tbStudentWhere" />
        <include refid="tbStudentOrder" />
        <include refid="tbStudentLimit" />
    </select>
    
    <select id="limitDao" resultMap="tbStudentResultMap">
        SELECT
        <include refid="tbStudentColumns" />
        FROM tb_student
        <include refid="tbStudentWhere" />
        <include refid="tbStudentOrder" />
        <include refid="tbStudentLimit" />
    </select>
    
    <insert id="saveDao">
        INSERT INTO tb_student
        <trim prefix="(" prefixOverrides=",">
            <if test="id!=0">,id</if>
            <if test="name!=null">,name</if>
        </trim>
        ) VALUES
        <trim prefix="(" prefixOverrides=",">
            <if test="id!=0">,#{id}</if>
            <if test="name!=null">,#{name}</if>
        </trim>
        )
    </insert>
    
    <update id="updateDao">
        UPDATE tb_student
        <trim prefix="SET" prefixOverrides=",">
            <if test="id!=0">,id = #{id}</if>
            <if test="name!=null">,name = #{name}</if>
        </trim>
        <trim prefix="WHERE" prefixOverrides="AND">AND id = #{id}</trim>
    </update>
    
    <delete id="deleteDao">
        DELETE FROM tb_student
        <trim prefix="WHERE" prefixOverrides="AND">AND id = #{id}</trim>
    </delete>

    <select id="pageTbStudent" resultMap="tbStudentResultMap">
        SELECT
        <include refid="tbStudentColumns" />
        FROM tb_student
        <include refid="tbStudentWhere" />
        <include refid="order" />
        <include refid="tbStudentLimit" />
    </select>

    <select id="pageTbStudentCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM tb_student
        <include refid="tbStudentWhere" />
    </select>

</mapper>
